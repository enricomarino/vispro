<?xml version="1.0" encoding="UTF-8"?>

<!-- Start XML configuration -->
<vispro xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="descriptor.xsd">
    <types>
        <type name="zoom" />
        <type name="map" />
        <type name="search" />
        <type name="info" />
    </types>
    <!-- Components list -->
    <widgets>

        <!-- Widget 1 -->
        <widget type="zoom" name="zoom_h_s">
            <label>Horizontal Scroll Zoom</label>
            <description>Zoom orizzontale con scrollbar</description>
            <images>
                <icon url="images/zoom_h_s.jpg" />
                <image url="images/zoom_h_s.jpg" />
            </images>
            <dimensions>
                <width value="168" min="10" max="300" resizable="true"/>
                <height value="26" resizable="false"/>
            </dimensions>
            <dependencies>
                <dependency name="request_map" required="true" type="map">
                    <description>La mappa su cui agisce lo zoom</description>
                </dependency>
            </dependencies>
            <properties>
                <bool name="tooltip" label="Tooltip property" default="true"/>
            </properties>
            <code>
                <insert match="html">
<![CDATA[<div id="<%= id %>" style="position:absolute; top:<%= top %>px; left:<%= left %>px; z-index: <%= zIndex %>" ></div>]]>
                </insert>
                <insert match="js">
<![CDATA[var <%= id %> = geopoi.sdk.zoom("<%= id %>", 
    { 
        map: <%= request_map %>, 
        tooltip: <%= tooltip %>,
        vertical: false,
        slider: true,
        size: <%= width %>
    } );]]>
                </insert>
            </code>
        </widget>

        <!-- Widget 2 -->
        <widget type="zoom" name="zoom_v_s">
            <label>Vertical Scroll Zoom</label>
            <description>Zoom verticale con scrollbar</description>
            <images>
                <icon url="images/zoom_v_s.jpg" />
                <image url="images/zoom_v_s.jpg" />
            </images>
            <dimensions>
                <width value="26" resizable="false"/>
                <height value="168" min="10" max="300" resizable="true"/>
            </dimensions>
            <dependencies>
                <dependency name="request_map" required="true" type="map" label="Mappa">
                    <description>La mappa su cui agisce lo zoom</description>
                </dependency>
            </dependencies>
            <properties>
                <bool name="tooltip" label="Tooltip property" default="false"/>
            </properties>
            <code>
                <insert match="html">
<![CDATA[<div id="<%= id %>" style="position:absolute; top:<%= top %>px; left:<%= left %>px; z-index: <%= zIndex %>" ></div>]]>
                </insert>
                <insert match="js">
<![CDATA[var <%= id %> = geopoi.sdk.zoom("<%= id %>", 
    { 
        map: <%= request_map %>, 
        tooltip: <%= tooltip %>,
        vertical: true,
        slider: true,
        size: <%= width %>
    } );]]>
                </insert>
            </code>
        </widget>

        <!-- Widget 3 -->
        <widget type="map" name="map_plain">
            <label>Mappa semplice</label>
            <description>Mappa</description>
            <images>
                <icon url="images/map.jpg" />
                <image url="images/map.jpg" />
            </images>
            <dimensions>
                <width value="400" min="10" max="800" resizable="true"/>
                <height value="300" min="10" max="600" resizable="true"/>
            </dimensions>
            <dependencies></dependencies>
            <properties></properties>
            <code>
                <insert match="html">
<![CDATA[<div id="<%= id %>" style="position:absolute; left:<%= left %>px; top:<%= top %>px; width:<%= width %>px; height:<%= height %>px; z-index: <%= zIndex %>"></div>]]>
                </insert>
                <insert match="js">
<![CDATA[var <%= id %> = geopoi.sdk.map("<%= id %>");]]>
                </insert>
            </code>
        </widget>

        <!-- Widget 4 -->
        <widget type="info" name="info_plain">
            <label>Info Window</label>
            <description>Area di log</description>
            <images>
                <icon url="images/info.jpg" />
                <image url="images/info.jpg" />
            </images>
            <dimensions>
                <width value="214" min="10" max="800" resizable="true"/>
                <height value="212" min="10" max="600" resizable="true"/>
            </dimensions>
            <dependencies>
                <dependency name="request_map" required="true" type="map">
                    <description>La mappa su cui agisce lo zoom</description>
                </dependency>
            </dependencies>
            <properties>
                <bool name="tooltip" label="Tooltip property" default="false"/>
            </properties>
            <code>
                <insert match="html">
<![CDATA[<div id="<%= id %>" style="position:absolute; left:<%= left %>px; top:<%= top %>px; z-index: <%= zIndex %>"></div>]]>
                </insert>
                <insert match="js">
<![CDATA[var <%= id %> = geopoi.sdk.infoDiv("<%= id %>",
        {
            map: <%= request_map %>,
            width: <%= width %>,
            height: <%= height %>,
            tooltip: <%= tooltip %>
        });]]>
                </insert>
            </code>
        </widget>

        <!-- Widget 5 -->
        <widget type="search" name="search_plain">
            <label>Ricerca Strade</label>
            <description>Ricerca strada</description>
            <images>
                <icon url="images/search.jpg" />
                <image url="images/search.jpg" />
            </images>
            <dimensions>
                <width value="323" resizable="false"/>
                <height value="121" max="600" resizable="false"/>
            </dimensions>
            <dependencies>
                <dependency name="request_map" required="true" type="map">
                    <description>La mappa su cui agisce la ricerca</description>
                </dependency>
                <dependency name="req_info" required="false" type="info">
                    <description>Spazio di log della ricerca</description>
                </dependency>
            </dependencies>
            <properties>
                <bool name="tooltip" label="Tooltip property" default="false"/>
            </properties>
            <code>
                <insert match="html">
<![CDATA[<div id="<%= id %>" style="position:absolute; left:<%= left %>px; top:<%= top %>px; z-index: <%= zIndex %>"></div>]]>
                </insert>
                <insert match="js">
<![CDATA[var <%= id %> = geopoi.sdk.infoDiv("<%= id %>",
        {
            map: <%= request_map %>,
            tooltip: <%= tooltip %>
            opt: false,
            infoDiv: <%= req_info %>
        });]]>
                </insert>
            </code>
        </widget>

        <!-- Widget 6 -->
        <widget type="search" name="search_opt">
            <label>Ricerca Strade con opzioni</label>
            <description>Ricerca strada con opzioni di ricerca</description>
            <images>
                <icon url="images/search_opt.jpg" />
                <image url="images/search_opt.jpg" />
            </images>
            <dimensions>
                <width value="324" resizable="false"/>
                <height value="153" max="600" resizable="false"/>
            </dimensions>
            <dependencies>
                <dependency name="request_map" required="true" type="map">
                    <description>La mappa su cui agisce la ricerca</description>
                </dependency>
                <dependency name="req_info" required="false" type="info">
                    <description>Spazio di log della ricerca</description>
                </dependency>
            </dependencies>
            <properties>
                <bool name="tooltip" label="Tooltip property" default="false"/>
            </properties>
            <code>
                <insert match="html">
<![CDATA[<div id="<%= id %>" style="position:absolute; left:<%= left %>px; top:<%= top %>px; z-index: <%= zIndex %>"></div>]]>
                </insert>
                <insert match="js">
<![CDATA[var <%= id %> = geopoi.sdk.infoDiv("<%= id %>",
    {
        map: <%= request_map %>,
        tooltip: <%= tooltip %>
        opt: true,
        infoDiv: <%= req_info %>
    });]]>
                </insert>
            </code>
        </widget>

        <!-- Widget 7 -->
        <widget type="pan" name="panotto">
            <label>Pan a 8 direzioni</label>
            <description>Pan a 8 direzioni</description>
            <images>
                <icon url="images/pan_8.jpg" />
                <image url="images/pan_8.jpg" />
            </images>
            <dimensions>
                <width value="60" resizable="false"/>
                <height value="59" resizable="false"/>
            </dimensions>
            <dependencies>
                <dependency name="request_map" required="true" type="map">
                    <description>La mappa su cui agisce il pan</description>
                </dependency>
            </dependencies>
            <properties>
                <bool name="tooltip" label="Tooltip property" default="true"/>
            </properties>
            <code>
                <insert match="html">
<![CDATA[<div id="<%= id %>" style="position:absolute; left:<%= left %>px; top:<%= top %>px; width:<%= width %>px; height:<%= height %>px; z-index: <%= zIndex %>"></div>]]>
                </insert>
                <insert match="js">
<![CDATA[var <%= id %> = geopoi.sdk.pan("<%= id %>",
    {
        map: <%= request_map %>,
        tooltip: <%= tooltip %>,
        fourarrow: false
    });]]>
                </insert>
            </code>
        </widget>

    <!-- End of components -->
    </widgets>
    
    <!-- HTML Source Code -->
    <source>
    <![CDATA[<!DOCTYPE html>
    <html>
        <head>
            <title>SoGeI - VisPro</title>
            <script src="../php/geopoiAPI.php?&key=506a222c-54ab-0b71-a398-b935cbc92943&sdk=true"></script>
            <link rel="stylesheet" href="../MobilityManager/css/redmond/jquery-ui-1.8.12.custom.css" />
            <link rel="stylesheet" href="../MobilityManager/css/geopoi.sdk.navigation.css" />
        </head>
        <body>
            
            <%= html %>
            
            <script>
            <%= js %>
            </script>
        </body>
    </html>
    ]]>
    </source>
</vispro>